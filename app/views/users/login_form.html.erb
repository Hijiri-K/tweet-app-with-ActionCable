<div class="main user-login">
  <div class="container">
    <h1 class="form-heading">ログイン</h1>
      <%=form_tag("/login") do%>
        <div class="form user-login-form">
          <div class="form-body">
            <div class="form-error">
              <%if @error_message%>
              <%=@error_message%>
              <%end%>
            </div>
            <p>メールアドレス</p>
            <input type="text" name="email" value="">
            <p>パスワード</p>
            <input type="password" name="password" value="">
            <input type="submit" name="" value="ログイン">
          </div>
        </div>
      <%end%>
  </div>
</div>
